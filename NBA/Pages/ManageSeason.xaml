<Page x:Class="NBA.Pages.ManageSeason"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageSeason">

    <Grid Background="White">
        <StackPanel Orientation="Horizontal">
            <Border>
                <DataGrid x:Name="DGridSeason">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Season"/>
                        <DataGridTextColumn Header="Matchup Type"/>
                        <DataGridTextColumn Header="Number of Matchup"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <Border Margin="200">
                <DataGrid x:Name="DGridMatchups">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date"/>
                        <DataGridTextColumn Header="Matchup"/>
                        <DataGridTextColumn Header="Result"/>
                        <DataGridTextColumn Header="Location"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</Page>
