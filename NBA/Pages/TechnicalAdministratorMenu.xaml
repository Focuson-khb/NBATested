<Page x:Class="NBA.Pages.TechnicalAdministratorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TechnicalAdministratorMenu">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Welcome to use this system , you can click the buttons below to navigate to the &#xA;                                                corresponding page. " HorizontalContentAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="40,0,50,0">
                <Button Content="Manage Executions" x:Name="btnExecutions" Style="{StaticResource BlueButton}" Width="180" Height="50" Margin="60" Click="btnExecutions_Click"/>
                <Button Content="Manage Report" x:Name="btnReport" Style="{StaticResource BlueButton}" Width="180" Height="50" Margin="50,60,60,60" Click="btnReport_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>